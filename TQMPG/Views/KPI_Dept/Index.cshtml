@model IEnumerable<TQMPG.Models.KPI_Dept>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Dept_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dept_Mgr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dept_Mgr_Email)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Dept_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dept_Mgr)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Dept_Mgr_Email)
        </td>        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.AutoID }) |
            @Html.ActionLink("Details", "Details", new { id = item.AutoID }) |
