@{
    ViewBag.Title = "UploadFile";
}

<h2>UploadFile</h2>

@using (Html.BeginForm("UploadFile", "Upload", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

<div class="container">

    <div class="row">
        <label>Project Title :</label> <input class="form-control" type="text" id="projectTitle" name="projectTitle" />

    </div>

    <div class="row">
        <label>FY :</label> <input class="form-control" type="text" id="fy" name="fy" value="FY20Q4" readonly />

    </div>

    <div class="row">
        <label>TQM Category :</label>
        <select class="form-control" name="category" id="category" required>
            <option value="Default" disabled selected>--- Please Select Category ---</option>
            <option value="Cost">Cost</option>
            <option value="EHS">EHS</option>
            <option value="Innovation">Innovation</option>
            <option value="People">People</option>
            <option value="Predictability">Predictability</option>
            <option value="Quality">Quality</option>
            <option value="Responsiveness">Responsiveness</option>


        </select>

    </div>

    <div class="row">
        <label>TQM Methodology :</label>
        @Html.DropDownList("MethodologyID", null, "---Select One---", new { @class = "form-control", required = "required" })
        @*@Html.ValidationMessageFor(model => model.MethodologyID, "", new { @class = "text-danger" })*@



    </div>

    <hr />

    <label style="color:red">Please upload power point only</label>

    <br />
    @Html.TextBox("file", "", new { type = "file" }) <br />


    <br />

    <input type="submit" value="Upload" />

    @ViewBag.Message

</div>


}  


